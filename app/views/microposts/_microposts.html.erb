<% if @microposts.any? %>
  <ul class="list-unstyled mt-2">
    <% @microposts.each do |micropost| %>
      <li class="d-flex">
        <div>
          <div>
            <%= link_to micropost.user.name, root_url, class: "text-decoration-none user-name--" %> <span class="text-muted txt-muted">posted at <%= micropost.created_at %></span>
          </div>
          <div>
            <p><%= micropost.content %></p>
          </div>
          <div class="delete-btn">
            <% if current_user == micropost.user %>
              <%= button_to "Delete", micropost, method: :delete, data: { confirm: "削除する？" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>